<h1>Edit a {{subject.name}}</h1>

<form action="/subjects/{{subject._id}}?_method=PUT" method="POST">
    {{!-- Name --}}
<div>
    <label for="">Name</label>
    <input type="text" class="form-control" name="name" value="{{subject.name}}">
</div>
    {{!-- Code --}}
<div>
    <label for="">Code</label>
    <input type="text" class="form-control" name="code" value="{{subject.code}}">
</div>
 {{!-- Pre_requisite --}}
    <div>
        <label for="">Pre_requisite</label>
        <input type="text" class="form-control" name="pre_requisite" value="{{subject.pre_requisite}}">

    </div>
    {{!-- Depatment --}}
<div>
    <label for="">Depatment</label>
   
   <select name="depatment" class="form-select">
    {{#each department}}
    <option value="{{_id}}">{{name}}</option>
    {{/each}}
   </select>
</div>

<div class="mt-3" >
    <button type="submit" class="btn btn-success">
        Save
    </button>
</div>


</form>